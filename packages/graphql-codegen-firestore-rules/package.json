{
  "name": "@firebase-graphql/graphql-codegen-firestore-rules",
  "version": "0.0.3",
  "files": [
    "dist"
  ],
  "author": "YutaUra",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js"
    },
    "./*": {
      "require": "./dist/cjs/*.js",
      "import": "./dist/esm/*.js"
    }
  },
  "scripts": {
    "build-base": "esbuild src/* --target=es2020 --platform=node --watch",
    "build": "run-p build:*",
    "build:cjs": "yarn build-base --format=cjs --outdir=dist/cjs",
    "build:esm": "yarn build-base --format=esm --outdir=dist/esm",
    "build-watch": "run-p build:* -- --watch"
  },
  "dependencies": {
    "@graphql-codegen/plugin-helpers": "^2.3.2",
    "@graphql-codegen/schema-ast": "^2.4.1",
    "@graphql-codegen/visitor-plugin-common": "^2.5.2",
    "auto-bind": "^5.0.1"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "esbuild": "^0.14.10",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "graphql": "^16.2.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  },
  "peerDependencies": {
    "graphql": "^16.2.0"
  }
}
